<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <solid android:color="@android:color/white" />

        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="-90"
                android:endColor="@color/base_color"
                android:startColor="@color/base_color" />

        </shape>
    </item>


</layer-list>